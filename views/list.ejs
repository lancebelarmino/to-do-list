<%- include("header") -%>

    <h1><%= listTitle %></h1>
        
    <div class="box">
        <h2 id="heading">To-do</h2>

        <% newListItems.forEach((item) => { %>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="checkboxItem" value="<%= item._id %>" onchange="this.form.submit()">
                        <p><%= item.name %></p>
                </div>
                <input type="hidden" name="listName" value="<%= listTitle %>">
            </form>
        <% }); %>
        
        <form action="/" method="post">
            <input type="text" name="newTask" placeholder="Add New Item" autocomplete="off">
            <button type="submit" name="list" value="<%= listTitle %>">+</button>
        </form>
    </div>

<%- include("footer") -%>
